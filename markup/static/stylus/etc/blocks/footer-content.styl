.page-footer
    height: 150px
    background-color: #0f0f0f
    display: flex
    align-items: center
    @media(max-width 768px)
        height: 280px

.footer-content
    display: flex
    align-items: center
    line-height: 28px
    @media(max-width 768px)
        flex-direction: column

.footer__logo
    width: 170px
    height: 75px
    @media(max-width 1170px)
        width: 100px
        height: auto
    @media(max-width 768px)
        margin-bottom: 10px

.footer__column-name
    font-weight 700
    font-size: 12px
    color: #505050

.footer__column-address
    font-weight 300
    font-size: 16px
    line-height: 28px
    color: #a5a5a5
    @media(max-width 1170px)
        font-size: 14px

.footer__column-name
    margin-right: 10px

.footer__column-tel
    font-weight 400
    font-size: 16px
    color: #fff
    @media(max-width 1170px)
        font-size: 14px

.footer__column-email
    font-weight 400
    font-size: 16px
    color: #acc705
    @media(max-width 1170px)
        font-size: 14px

.footer__column-wrap
    display: flex
    @media(max-width 768px)
        margin-bottom: 8px

.footer__column-right
    display: flex
    flex-direction: column
    align-items: flex-end
    .footer__column-name
        margin: 0
    @media(max-width 1170px)
        font-size: 12px
    @media(max-width 768px)
        flex-direction: row
        align-items: center

.footer__social
    height: 18px
    width: 15px
    background-color: #acc705
    color: #0f0f0f
    border-radius: 3px
    font-weight 400
    font-size: 28px
    text-align: right
    padding-right: 3px
    margin-bottom: 12px
    @media(max-width 1170px)
        height: 15px
        width: 12px
        font-size: 22px
    @media(max-width 768px)
        margin: 0
        padding: 0
        margin-right: 10px
